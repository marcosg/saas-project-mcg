<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron text-center">
    <h2>Welcome to the Project Management App!</h2>
    <p class="lead">
      You'll love managing your project with our application. Please take a look at our great plans
    </p>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="row">
          <div class="col">
            <%= render partial: "plan", locals: {heading: 'Free Plan', price: 'free', features:
                '<ul class="pl-3">
                  <li>Unlimited File Uploads</li>
                  <li>Responsive design</li>
                  <li>Access anywhere</li>
                  <li>1 project</li>
                </ul>'}
            %>
          </div>
          <div class="col">
            <%= render partial: "plan", locals: {heading: 'Amaze Plan', price: '$10', features:
                '<ul class="pl-3">
                  <li>Unlimited File Uploads</li>
                  <li>Responsive design</li>
                  <li>Access anywhere</li>
                  <li class="font-weight-bold" >Unlimited projects</li>
                </ul>'}
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
