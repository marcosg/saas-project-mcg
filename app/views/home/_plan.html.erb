<div class="card">
  <div class="card-header">
    <h2><%= heading %></h2>
  </div>
  <div class="card-body">
    <div class="row no-gutters">
      <div class="col">
        <div>
          <%== features %>
        </div>
      </div>
      <div class="col-auto">
        Price: <%= price %>
      </div>
     </div>
    <div class="row pl-3">
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
    </div>
  </div>
</div>